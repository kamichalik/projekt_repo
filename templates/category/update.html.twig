{% extends 'base.html.twig' %}
{% block title %}{{ 'title.category_update'|trans }}{% endblock %}
{% block body %}

    <div class="container">
        <div class="row my-3">
            <div class="col-md-6 offset-md-3">
                {% include 'default/_form.html.twig' with {
                    page_title: 'title.category_update',
                    page_title_param: {'%id%': category.id},
                    attr: {
                        method: 'PUT',
                        action: url('category_update', {'id': category.id})
                    },
                    form: form,
                    submit_label: 'action.save'|trans,
                    back_to_list_path: 'categories',
                } %}
            </div>
        </div>
    </div>

{% endblock %}

