<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
            <link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css" type="text/css">
            <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Raleway:ital,wght@0,400;0,500;0,600;1,400&family=Varta:wght@500&display=swap" rel="stylesheet">
            <style>
                h1 {font-family: 'Raleway', sans-serif; !important;}
                body {font-family: 'Lato', sans-serif; !important;}
            </style>

        {% endblock %}
    </head>
    <body class="ads-app">

    <nav class="navbar navbar-expand-sm navbar-dark bg-primary py-3">
        <div class="container">
            <button class="navbar-toggler" data-toggle="collapse" data-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <button type="button" class="btn btn-dark navbar-btn">
                <a href="{{ path('postings') }}" class="nav-item text-white">{{ 'title.main_page'|trans }}</a>
            </button>

            <button type="button" class="btn btn-light navbar-btn ml-2">
                <a href="{{ path('posting_create') }}" class="nav-item">{{ 'title.posting_create'|trans }}</a>
            </button>

            {% if is_granted('ROLE_ADMIN') %}

                <button type="button" class="btn btn-outline-light navbar-btn ml-2">
                    <a class="text-white" href="{{ url('postings_admin') }}">{{ 'title.postings'|trans }}</a>
                </button>

                <button type="button" class="btn btn-outline-light navbar-btn ml-2">
                    <a class="text-white" href="{{ url('categories', {'pageNumber':1}) }}">{{ 'title.categories'|trans }}</a>
                </button>

                <button type="button" class="btn btn-outline-light navbar-btn ml-2">
                    <a class="text-white" href="{{ url('comments', {'pageNumber':1}) }}">{{ 'title.comments'|trans }}</a>
                </button>

                {% endif %}

                <div class="navbar-nav navbar-right ml-auto btn-toolbar">
                    {% if app.user %}
                        <span class="navbar-text">{{ 'label.logged_as'|trans }} {{ app.user.username }}</span>
                        <button type="button" class="btn btn-light navbar-btn navbar-right ml-2">
                            <a href="{{ path('user_update') }}">{{ 'label.edit_profile'|trans }}</a>
                        </button>
                        <button type="button" class="btn btn-light navbar-btn navbar-right ml-2">
                            <a href="{{ path('app_logout') }}" class="nav-item">{{ 'label.logout'|trans }}</a>
                        </button>
                    {% else %}
                        <span class="navbar-text">{{ 'label.not_logged'|trans }} </span>
                        <button type="button" class="btn btn-light navbar-btn navbar-right ml-2">
                            <a href="{{ path('app_login') }}" class="nav-item">{{ 'label.login'|trans }}</a>
                        </button>
                    {% endif %}
                </div>
            </div>

        </div>
    </nav>

        {% include 'default/_flash_messages.html.twig' %}

        {% block body %}
        {% endblock %}


        {% block javascripts %}

            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

        {% endblock %}
    </body>
</html>
